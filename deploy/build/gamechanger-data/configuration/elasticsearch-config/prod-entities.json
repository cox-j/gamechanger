{
    "index": {
        "settings": {
            "index.mapping.nested_objects.limit": 100000,
            "index": {
                "number_of_shards": 5,
                "number_of_replicas": 1,
                "mapping.nested_fields.limit": 20000
            },
            "analysis": {
                "normalizer": {
                    "lowercase_normalizer": {
                        "type": "custom",
                        "char_filter": [],
                        "filter": ["lowercase"]
                    }
                },
                "filter": {
                    "gc_stop": {
                        "type": "stop",
                        "stopwords":  []
                    }
                },
                "analyzer": {
                    "gc_english": {
                        "tokenizer":  "standard",
                        "filter": [
                            "lowercase",
                            "gc_stop"
                        ]
                    }
                }
            }
        },
        "mappings": {
            "properties": {
                "name": {
                    "type": "text",
                    "analyzer": "gc_english"
                },
                "information": {
                    "type": "text",
                    "analyzer": "gc_english"
                },
                "aliases": {
                    "dynamic": "true",
                    "type": "nested",
                    "properties": {
                        "name": {
                            "type": "text",
                            "analyzer": "gc_english"
                        }
                    }
                },
                "related_agency" : {
                    "type" : "text",
                    "fields" : {
                        "keyword" : {
                            "type" : "keyword",
                            "ignore_above" : 256
                        }
                    }
                },
                "website" : {
                    "type" : "text",
                    "fields" : {
                        "keyword" : {
                            "type" : "keyword",
                            "ignore_above" : 256
                        }
                    }
                },
                "address" : {
                    "type" : "text",
                    "fields" : {
                        "keyword" : {
                            "type" : "keyword",
                            "ignore_above" : 256
                        }
                    }
                },
                "crawlers" : {
                    "type" : "text",
                    "fields" : {
                        "keyword" : {
                            "type" : "keyword",
                            "ignore_above" : 256
                        }
                    }
                },
                "entity_type" : {
                    "type" : "text",
                    "fields" : {
                        "keyword" : {
                            "type" : "keyword",
                            "ignore_above" : 256
                        }
                    }
                },
                "government_branch" : {
                    "type" : "text",
                    "fields" : {
                        "keyword" : {
